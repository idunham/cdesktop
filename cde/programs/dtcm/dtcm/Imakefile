#else
EXTRA_DEFINES = -DSunOS=$(OSMAJORVERSION)$(OSMINORVERSION)
#endif

EXTRA_CCOPTIONS = -xstrconst -Xc -v
EXTRA_LIBRARIES = $(FNS_EXTRA_LIBS)
#endif

